{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["es2015", "es2017", "dom"]
  },
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
